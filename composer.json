{
    "name": "dragonee/php-silverplate",
    "description": "A minimal stack for creating static HTML/Markdown websites.",
    "keywords": ["silverplate", "static", "markdown", "html", "website"],
    "homepage": "https://github.com/dragonee/php-silverplate",
    "license": "MIT",

    "require": {
        "michelf/php-markdown": "*",
        "nzsregionulodzkiego/wampiriada": "dev-master",
        "illuminate/database": "*"
    },

    "suggest": {
        "dragonee/silverplate-form": "Add a contact form to the site."
    },

    "repositories":
        [{
            "type": "vcs",
            "url": "ssh://git@dev.nzs.lodz.pl:7999/in/wampiriada.git"
        }]
    ,

    "minimum-stability": "dev",
    "autoload": {
        "files": [
            "lib/block.php",
            "lib/block_functions.php"
        ],

        "psr-4": {
            "NZS\\Application\\": "src/"
        }
    }
}
